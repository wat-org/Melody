<?xml version="1.0" encoding="UTF-8"?>

<environment>

	<models>
		<model herit="./environment/models/model[@name='rhel-6']" name="rhel-6.haproxy">
			<web-server path="/etc/haproxy">
				<owner login="haproxy"/>
				<log level="debug"/>
				<listen-on device="eth0" port-offset="0">
					<socket name="http" mode="http" port="80"/>
				</listen-on>
			</web-server>

			<rhn>
				<!-- mandatory child channel for haproxy -->
				<channel name="rhel-x86_64-server-lb-6" herit-policy="append"/>
			</rhn>

			<credentials>
				<!-- haproxy user and group -->
				<user homedir="/home/haproxy" id="188" name="haproxy" password="XXXXXXXX" ref-group-name="haproxy" herit-policy="append"/>
				<group id="188" name="haproxy" herit-policy="append"/>
			</credentials>
		</model>
	</models>

</environment>